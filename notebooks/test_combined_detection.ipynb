    "# Test ball trajectory tracking\n",
    "print(\"üèÄ Testing ball trajectory tracking...\")\n",
    "\n",
    "# Create a sequence of frames with moving ball\n",
    "def create_moving_ball_sequence(n_frames=10):\n",
    "    frames = []\n",
    "    \n",
    "    for i in range(n_frames):\n",
    "        # Create base court\n",
    "        frame = create_realistic_basketball_scene()\n",
    "        \n",
    "        # Remove the original ball by painting over it\n",
    "        cv2.circle(frame, (580, 180), 25, (25, 25, 25), -1)\n",
    "        \n",
    "        # Add moving ball (arc trajectory)\n",
    "        t = i / (n_frames - 1)  # 0 to 1\n",
    "        start_x, start_y = 200, 400\n",
    "        end_x, end_y = 1000, 350\n",
    "        \n",
    "        # Parabolic arc\n",
    "        x = start_x + (end_x - start_x) * t\n",
    "        y = start_y + (end_y - start_y) * t - 200 * np.sin(np.pi * t)  # Arc shape\n",
    "        \n",
    "        ball_center = (int(x), int(y))\n",
    "        ball_radius = 15\n",
    "        \n",
    "        # Draw basketball\n",
    "        cv2.circle(frame, ball_center, ball_radius, (0, 165, 255), -1)\n",
    "        cv2.line(frame, (ball_center[0]-12, ball_center[1]), \n",
    "                 (ball_center[0]+12, ball_center[1]), (0, 0, 0), 2)\n",
    "        cv2.line(frame, (ball_center[0], ball_center[1]-12), \n",
    "                 (ball_center[0], ball_center[1]+12), (0, 0, 0), 2)\n",
    "        \n",
    "        frames.append(frame)\n",
    "    \n",
    "    return frames\n",
    "\n",
    "# Generate sequence\n",
    "ball_sequence = create_moving_ball_sequence(8)\n",
    "print(f\"Created {len(ball_sequence)} frame sequence with moving ball\")\n",
    "\n",
    "# Reset ball detector tracking\n",
    "ball_detector.reset_tracking()\n",
    "\n",
    "# Process sequence\n",
    "trajectory_points = []\n",
    "all_frame_detections = []\n",
    "\n",
    "for i, frame in enumerate(ball_sequence):\n",
    "    ball_detections = ball_detector.detect(frame, use_tracking=True)\n",
    "    all_frame_detections.append(ball_detections)\n",
    "    \n",
    "    if ball_detections:\n",
    "        bbox = ball_detections[0]['bbox']\n",
    "        center = ((bbox[0] + bbox[2]) / 2, (bbox[1] + bbox[3]) / 2)\n",
    "        trajectory_points.append(center)\n",
    "        print(f\"Frame {i+1}: Ball detected at ({center[0]:.0f}, {center[1]:.0f})\")\n",
    "    else:\n",
    "        print(f\"Frame {i+1}: No ball detected\")\n",
    "\n",
    "# Get trajectory from detector\n",
    "detector_trajectory = ball_detector.get_ball_trajectory()\n",
    "\n",
    "print(f\"\\nüìà Trajectory Results:\")\n",
    "print(f\"   Detected in {len(trajectory_points)}/{len(ball_sequence)} frames\")\n",
    "print(f\"   Trajectory points: {len(detector_trajectory)}\")\n",
    "\n",
    "if len(trajectory_points) >= 4:\n",
    "    print(\"‚úÖ Ball tracking working well!\")\n",
    "elif len(trajectory_points) >= 2:\n",
    "    print(\"‚ö†Ô∏è Partial ball tracking - may need threshold adjustment\")\n",
    "else:\n",
    "    print(\"‚ùå Ball tracking not working - check detection settings\")"
   ]
