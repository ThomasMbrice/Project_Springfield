    "# Create comprehensive basketball test scene\n",
    "def create_realistic_basketball_scene():\n",
    "    \"\"\"Create a detailed basketball test scene\"\"\"\n",
    "    # Larger, more detailed court\n",
    "    img = np.ones((720, 1280, 3), dtype=np.uint8) * 25  # Dark court floor\n",
    "    \n",
    "    # Court markings in white\n",
    "    # Outer boundary\n",
    "    cv2.rectangle(img, (80, 80), (1200, 640), (255, 255, 255), 3)\n",
    "    \n",
    "    # Center line\n",
    "    cv2.line(img, (640, 80), (640, 640), (255, 255, 255), 2)\n",
    "    \n",
    "    # Center circle\n",
    "    cv2.circle(img, (640, 360), 80, (255, 255, 255), 2)\n",
    "    \n",
    "    # Three-point lines (simplified)\n",
    "    cv2.ellipse(img, (200, 360), (180, 160), 0, -90, 90, (255, 255, 255), 2)\n",
    "    cv2.ellipse(img, (1080, 360), (180, 160), 0, 90, 270, (255, 255, 255), 2)\n",
    "    \n",
    "    # Free throw circles\n",
    "    cv2.circle(img, (200, 360), 60, (255, 255, 255), 2)\n",
    "    cv2.circle(img, (1080, 360), 60, (255, 255, 255), 2)\n",
    "    \n",
    "    # Basketball hoops (simplified)\n",
    "    cv2.rectangle(img, (75, 340), (85, 380), (255, 165, 0), -1)  # Left hoop\n",
    "    cv2.rectangle(img, (1195, 340), (1205, 380), (255, 165, 0), -1)  # Right hoop\n",
    "    \n",
    "    # Add players with more realistic proportions\n",
    "    # Team 1 (Red) - Home team\n",
    "    players_red = [\n",
    "        (180, 300, \"23\"),  # Player 1\n",
    "        (320, 420, \"7\"),   # Player 2  \n",
    "        (450, 280, \"12\"),  # Player 3\n",
    "    ]\n",
    "    \n",
    "    # Team 2 (Blue) - Away team\n",
    "    players_blue = [\n",
    "        (850, 350, \"10\"),  # Player 1\n",
    "        (950, 250, \"33\"),  # Player 2\n",
    "        (760, 480, \"15\"),  # Player 3\n",
    "    ]\n",
    "    \n",
    "    # Draw red team players\n",
    "    for x, y, number in players_red:\n",
    "        # Body (taller rectangle)\n",
    "        cv2.rectangle(img, (x-25, y), (x+25, y+120), (0, 0, 180), -1)\n",
    "        # Head\n",
    "        cv2.circle(img, (x, y-15), 20, (255, 220, 180), -1)\n",
    "        # Jersey number\n",
    "        cv2.putText(img, number, (x-15, y+60), cv2.FONT_HERSHEY_SIMPLEX, 0.8, (255, 255, 255), 2)\n",
    "        # Arms\n",
    "        cv2.rectangle(img, (x-35, y+20), (x-25, y+80), (255, 220, 180), -1)  # Left arm\n",
    "        cv2.rectangle(img, (x+25, y+20), (x+35, y+80), (255, 220, 180), -1)  # Right arm\n",
    "        # Legs\n",
    "        cv2.rectangle(img, (x-20, y+120), (x-5, y+160), (0, 0, 120), -1)  # Left leg\n",
    "        cv2.rectangle(img, (x+5, y+120), (x+20, y+160), (0, 0, 120), -1)   # Right leg\n",
    "    \n",
    "    # Draw blue team players\n",
    "    for x, y, number in players_blue:\n",
    "        # Body\n",
    "        cv2.rectangle(img, (x-25, y), (x+25, y+120), (180, 100, 0), -1)\n",
    "        # Head\n",
    "        cv2.circle(img, (x, y-15), 20, (255, 220, 180), -1)\n",
    "        # Jersey number\n",
    "        cv2.putText(img, number, (x-15, y+60), cv2.FONT_HERSHEY_SIMPLEX, 0.8, (255, 255, 255), 2)\n",
    "        # Arms\n",
    "        cv2.rectangle(img, (x-35, y+20), (x-25, y+80), (255, 220, 180), -1)  # Left arm\n",
    "        cv2.rectangle(img, (x+25, y+20), (x+35, y+80), (255, 220, 180), -1)  # Right arm\n",
    "        # Legs\n",
    "        cv2.rectangle(img, (x-20, y+120), (x-5, y+160), (120, 60, 0), -1)   # Left leg\n",
    "        cv2.rectangle(img, (x+5, y+120), (x+20, y+160), (120, 60, 0), -1)    # Right leg\n",
    "    \n",
    "    # Add basketball (more realistic)\n",
    "    ball_center = (580, 180)\n",
    "    ball_radius = 18\n",
    "    \n",
    "    # Basketball body (orange)\n",
    "    cv2.circle(img, ball_center, ball_radius, (0, 165, 255), -1)\n",
    "    \n",
    "    # Basketball lines (black)\n",
    "    cv2.line(img, (ball_center[0]-ball_radius+2, ball_center[1]), \n",
    "             (ball_center[0]+ball_radius-2, ball_center[1]), (0, 0, 0), 2)\n",
    "    cv2.line(img, (ball_center[0], ball_center[1]-ball_radius+2), \n",
    "             (ball_center[0], ball_center[1]+ball_radius-2), (0, 0, 0), 2)\n",
    "    \n",
    "    # Curved seam lines\n",
    "    cv2.ellipse(img, ball_center, (ball_radius-2, int(ball_radius*0.6)), 45, 0, 180, (0, 0, 0), 1)\n",
    "    cv2.ellipse(img, ball_center, (ball_radius-2, int(ball_radius*0.6)), -45, 0, 180, (0, 0, 0), 1)\n",
    "    cv2.ellipse(img, ball_center, (ball_radius-2, int(ball_radius*0.6)), 135, 0, 180, (0, 0, 0), 1)\n",
    "    cv2.ellipse(img, ball_center, (ball_radius-2, int(ball_radius*0.6)), -135, 0, 180, (0, 0, 0), 1)\n",
    "    \n",
    "    # Add some court texture/shadows for realism\n",
    "    for i in range(0, 1280, 40):\n",
    "        cv2.line(img, (i, 0), (i, 720), (35, 35, 35), 1)  # Subtle vertical lines\n",
    "    \n",
    "    return img\n",
    "\n",
    "# Create and display test scene\n",
    "test_scene = create_realistic_basketball_scene()\n",
